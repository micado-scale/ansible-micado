-A FILTERS -m state --state NEW -m tcp -p tcp --dport 2380 -j ACCEPT
-A FILTERS -m state --state NEW -m udp -p udp --dport 10250 -j ACCEPT
-A FILTERS -m state --state NEW -m udp -p udp --dport 10251 -j ACCEPT
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 10252 -j ACCEPT
#swarm
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 2377 -j ACCEPT
-A FILTERS -m state --state NEW -m udp -p udp --dport 4789 -j ACCEPT
